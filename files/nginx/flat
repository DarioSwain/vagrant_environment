server {
  

	listen 80;

	server_name flat;
	root /var/www/flat;
	error_log /var/log/nginx/flat.error.log;
	access_log /var/log/nginx/flat.access.log;
	
	#strip app_dev.php/ prefix if it is present
  
	#rewrite ^/app_dev\.php/?(.*)$ /$1 permanent;


	
	location / {
	
    index app_dev.php;
	
    try_files $uri @rewriteapp;
	}
	
	location @rewriteapp {
	
    rewrite ^(.*)$ /app_dev.php/$1 last;
	}
	
	# pass the PHP scripts to FastCGI server listening socket
  
	
	location ~ ^/(app|app_dev|index.php)\.php(/|$) {

	    fastcgi_pass unix://var/run/php5-fpm.sock;
	
    fastcgi_keep_conn on;
	
    fastcgi_split_path_info ^(.+\.php)(/.*)$;
	
    include fastcgi_params;
	
    fastcgi_param  SCRIPT_FILENAME
	    $document_root$fastcgi_script_name;
	
    fastcgi_param  HTTPS   off;
  
	}

}
